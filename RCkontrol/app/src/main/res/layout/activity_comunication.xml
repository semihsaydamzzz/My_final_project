<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ball"
    tools:context=".Comunication"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/forward_button"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/y"
        app:layout_constraintEnd_toStartOf="@+id/yforward_button"
        app:layout_constraintStart_toEndOf="@+id/hforward_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="118dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bb"
        app:layout_constraintBottom_toTopOf="@+id/right_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sol_button" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="117dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/bb2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_button" />

    <Button
        android:id="@+id/backward_button"
        android:layout_width="99dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ledon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sag_button" />

    <Button
        android:id="@+id/hforward_button"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/h"
        app:layout_constraintBottom_toTopOf="@+id/sol_button"
        app:layout_constraintEnd_toStartOf="@+id/forward_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yforward_button"
        android:layout_width="84dp"
        android:layout_height="39dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/ileri"
        app:layout_constraintBottom_toTopOf="@+id/sag_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forward_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sol_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/sola"
        app:layout_constraintBottom_toTopOf="@+id/left_button"
        app:layout_constraintEnd_toStartOf="@+id/sag_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hforward_button" />

    <Button
        android:id="@+id/sag_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="203dp"
        android:background="@drawable/saga"
        app:layout_constraintBottom_toTopOf="@+id/backward_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sol_button"
        app:layout_constraintTop_toBottomOf="@+id/yforward_button" />
</android.support.constraint.ConstraintLayout>